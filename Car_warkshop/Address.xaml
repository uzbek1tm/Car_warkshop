    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="72*"/>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="335*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Мы находимся:" HorizontalAlignment="Center"  FontSize="24" VerticalAlignment="Bottom"></TextBlock>
        <TextBlock Text="Подольск,Большая Ивановская ул., 52/77" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Row="1" ></TextBlock>
        <Image Source="/Resources/адрис.png" HorizontalAlignment="Center"  Width="302" Grid.Row="3"></Image>
        <Button Content="Назад" Name="BtnBack"  HorizontalAlignment="Right" VerticalAlignment="Center" Click="BtnBack_Click"></Button>
    </Grid>
</Page>
