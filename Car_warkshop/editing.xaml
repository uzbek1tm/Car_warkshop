<Page x:Class="Car_warkshop.editing"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Car_warkshop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="editing">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="49*"/>
        </Grid.RowDefinitions>
        <Button Content="Назад" Name="BtnBack"  HorizontalAlignment="Right" VerticalAlignment="Top" Click="BtnBack_Click"></Button>
        <Button Content="История заказа" Width="170" Height="30" VerticalAlignment="Bottom" Name="BtnHistory" Click="BtnHistory_Click"></Button>
        <Button Content="Редактирование работников" Width="170" Height="30" VerticalAlignment="Bottom" Name="BtnMechanic" Click="BtnMechanic_Click_1" Grid.Row="1"></Button>
        <Button Content="Редактировать услуги" Width="170" Height="30" Grid.Row="2"  VerticalAlignment="Top" Name="BtnRedservis" Click="BtnRedservis_Click_1"></Button>
    </Grid>
</Page>
